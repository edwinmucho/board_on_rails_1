<div class='container'>
    <div class='row'>
        <h1> 게시글 목록</h1>
    </div>
</div>

<div class='container'>
    <div class='row'>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>번호</th>
              <th>제목</th>
              <th>글쓴이</th>
              <th>작성일</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post|%>
            <tr>
              <th scope="row"><%=post.id%></th>
              <td><a href='/post/show/<%=post.id%>'><%=post.title%></a></td>
              <td><%=post.user.email%></td>
              <!--<td><%=((Time.now - post.created_at)/60).round().to_s + ' 분전'%></td>-->
              <td><%=time_ago_in_words(post.created_at)%></td>
            </tr>
            <%end%>
          </tbody>
        </table>
    </div>
</div>

<div class='container'>
    <div class='row float-right'>
        <a href='/post/new'><button type="button" class="btn btn-primary">글쓰기</button></a>
    </div>
</div>

