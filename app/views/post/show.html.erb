<%= form_tag("/post/create_comment/#{@post.id}", method: "get") do %>
  <%= label_tag(:content,'댓글 : ')%>
  <%= text_field_tag(:content)%>
  <%= submit_tag('댓글쓰기')%>
<%end%>

<% @post.comments.each do |c|%>
<p><%= c.content %></p>
<%end%>